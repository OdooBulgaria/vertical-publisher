<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_lowmargin" model="report.paperformat">
            <field name="name">European A4 Low Margin</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <template id="publisher_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="publisher.publisher_layout_header" />
            <t t-raw="0" />
            <t t-call="publisher.publisher_layout_footer" />
        </template>

        <template id="publisher_layout_internal">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="publisher.publisher_layout_header" />
            <t t-raw="0" />
            <t t-call="publisher.publisher_layout_internal_footer" />
        </template>

        <template id="publisher_layout_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <img t-if="company.reports_logo" t-att-src="'data:image/png;base64,%s' % company.reports_logo" style="height: 5em;"/>
                    </div>
                    <div t-if="company.rml_header1" class="col-xs-9 text-right" style="margin-top:2em;" t-field="company.rml_header1"/>
                </div>
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"></div>
                    </div>
                </div>
            </div>
        </template>

        <template id="publisher_layout_footer">
            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <t t-set="company" t-value="company.sudo()"/>

                    <ul class="list-inline">
                        <li t-if="company.vat">TIN: <span t-field="company.vat"/></li>

                        <li t-if="company.vat and company.iban">&amp;bull;</li>
                        <li t-if="company.iban">IBAN: <span t-field="company.iban"/></li>

                        <li t-if="company.iban and company.bank or company.iban and company.bic">&amp;bull;</li>
                        <li t-if="company.bank"><span t-field="company.bank"/>, </li>

                        <li t-if="company.bic">BIC: <span t-field="company.bic"/></li>
                    </ul>

                    <ul class="list-inline">
                        <li t-if="company.company_registry">Business Permit: <span t-field="company.company_registry"/></li>
                    </ul>

                    <ul class="list-inline">
                        <li>Page:</li>
                        <li><span class="page"/></li>
                        <li>/</li>
                        <li><span class="topage"/></li>
                    </ul>
                </div>
            </div>
        </template>

        <template id="publisher_layout_internal_footer">
            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <t t-set="company" t-value="company.sudo()"/>

                    <ul class="list-inline">
                        <li>Page:</li>
                        <li><span class="page"/></li>
                        <li>/</li>
                        <li><span class="topage"/></li>
                    </ul>
                </div>
            </div>
        </template>
    </data>
</odoo>