<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_production_template_document">
            <t t-call="publisher.publisher_layout_internal">
                <t t-set="doc" t-value="doc.with_context({'lang':user.partner_id.lang})" />
                <div class="page">
                    <div class="oe_structure" />

                    <h2 style="font-size:2em; text-align:center; padding-top:0.5em; padding-bottom:2em;">
                        <span t-field="doc.name" />
                    </h2>

                    <div class="row mt32 mb32" id="informations">
                        <div class="col-xs-3">
                            <strong>Production Type:</strong>
                            <p t-field="doc.production_type_id"/>
                        </div>
                        <div t-if="doc.state" class="col-xs-3">
                            <strong>State:</strong>
                            <p t-field="doc.state"/>
                        </div>
                        <div t-if="doc.project_id" class="col-xs-3">
                            <strong>Project:</strong>
                            <p t-field="doc.project_id"/>
                        </div>
                        <div t-if="doc.note" class="col-xs-3">
                            <strong>Comment:</strong>
                            <p t-field="doc.note"/>
                        </div>
                        <div t-if="doc.themes" class="col-xs-3">
                            <strong>Themes:</strong>
                            <p t-field="doc.themes"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Confirmed Lines:</strong>
                            <p t-field="doc.sale_lines_confirmed_count"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Equipment Received Lines:</strong>
                            <p t-field="doc.sale_lines_full_equipment_count"/>
                        </div>
                        <div t-if="doc.date_full_equipment_limit" class="col-xs-3">
                            <strong>Full Equipment Limit Date:</strong>
                            <p t-field="doc.date_full_equipment_limit"/>
                        </div>
                        <div t-if="doc.date_blanco" class="col-xs-3">
                            <strong>Blanco Date:</strong>
                            <p t-field="doc.date_blanco"/>
                        </div>
                        <div t-if="doc.date_start" class="col-xs-3">
                            <strong>Publication Date / Event:</strong>
                            <p t-field="doc.date_start"/>
                        </div>
                        <div t-if="doc.date_end" class="col-xs-3">
                            <strong>End Date:</strong>
                            <p t-field="doc.date_end"/>
                        </div>
                        <div t-if="doc.date_closing" class="col-xs-3">
                            <strong>Closing Date:</strong>
                            <p t-field="doc.date_closing"/>
                        </div>
                    </div>

                    <t t-foreach="doc.sale_ids" t-as="sale">
                        <h3>
                            <span t-field="sale.name" />
                        </h3>
                        <div style="font-style: italic;">
                            <span t-field="sale.state" />
                        </div>
                        <h4>
                            <t t-if="sale.agency_id">
                                <div>Agency : <span t-field="sale.agency_id" /></div>
                            </t>
                            <div>Customer : <span t-field="sale.partner_id" /></div>
                        </h4>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Media</th>
                                    <th>Publication</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-foreach="sale.order_line" t-as="l">
                                    <t t-if="l.production_id.id == doc.id">

                                        <tr>
                                            <td>
                                                <div><strong><span t-field="l.product_id"/></strong></div>
                                                <div><strong>Quantity : </strong><span t-field="l.product_uom_qty"/></div>
                                                <div><span t-field="l.name"/></div>
                                            </td>
                                            <td>
                                                <div><strong>Format : </strong><span t-field="l.format_id"/></div>
                                                <div><strong>Location : </strong><span t-field="l.location_id"/></div>
                                                <div><strong>Color : </strong><span t-field="l.color_id"/></div>
                                            </td>
                                            <td>
                                                <div><strong>Publication Date : </strong><span t-field="l.date_start"/></div>
                                                <div><strong>End Date : </strong><span t-field="l.date_end"/></div>
                                                <div><strong>Full Equipment : </strong><i class="fa fa-times" aria-hidden="true" t-if="not l.full_equipment_received" /><i class="fa fa-check" aria-hidden="true" t-if="l.full_equipment_received" /><!--<input type="checkbox" t-if="not l.full_equipment_received" /><input type="checkbox" checked="checked" t-if="l.full_equipment_received" />--></div>
                                            </td>
                                        </tr>
                                    </t>
                                </t>

                            </tbody>
                        </table>
                    </t>

                    <div class="oe_structure"/>
                </div>
            </t>
        </template>


        <template id="report_production_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="publisher.report_production_template_document" t-lang="user.partner_id.lang"/>
                </t>
            </t>
        </template>




        <template id="report_production_invoice_status_template_document">
            <t t-call="publisher.publisher_layout_internal">
                <t t-set="doc" t-value="doc.with_context({'lang':user.partner_id.lang})" />
                <div class="page">
                    <div class="oe_structure" />

                    <div style="font-size:1.7em; text-align:center;">
                        <span t-field="doc.name" />
                    </div>
                    <div style="font-size:1.2em; text-align:center; padding-bottom:1.5em;">
                        Invoice Status
                    </div>

                    <table style="width:100%; font-size:0.8em;">
                        <tr>
                            <td style="padding:0.5em; width:15%;">
                                <div t-if="doc.name">Production</div>
                                <div t-if="doc.production_type_id">Production Type</div>
                                <div t-if="doc.project_id">Project</div>
                                <div t-if="doc.note">Comment</div>
                            </td>
                            <td style="padding:0.5em; width:18.333333%; border-right:0.5px solid grey; font-weight:bold;">
                                <div t-if="doc.name" t-field="doc.name" />
                                <div t-if="doc.production_type_id" t-field="doc.production_type_id" />
                                <div t-if="doc.project_id" t-field="doc.project_id" />
                                <div t-if="doc.note" t-field="doc.note" />
                            </td>
                            <td style="padding:0.5em; width:15%;">
                                <div t-if="doc.state">State</div>
                                <div t-if="doc.date_start">Publication Date</div>
                                <div t-if="doc.sale_lines_confirmed_count">Confirmed Lines</div>
                                <div t-if="doc.invoicing_mode">Invoice Mode</div>
                            </td>
                            <td style="padding:0.5em; width:18.333333%; border-right:0.5px solid grey; font-weight:bold;">
                                <div t-if="doc.state" t-field="doc.state" />
                                <div t-if="doc.date_start" t-field="doc.date_start" />
                                <div t-if="doc.sale_lines_confirmed_count" t-field="doc.sale_lines_confirmed_count" />
                                <div t-if="doc.invoicing_mode" t-field="doc.invoicing_mode" />
                            </td>
                            <td style="padding:0.5em; width:15%;">
                                <div>Expected Turnover</div>
                                <div>Potential Turnover</div>
                                <div>Actual Turnover</div>
                                <div>Turnover Result</div>
                            </td>
                            <td style="padding:0.5em; width:18.333333%; font-weight:bold;">
                                <div t-field="doc.expected_turnover" />
                                <div t-field="doc.potential_turnover" />
                                <div t-field="doc.actual_turnover" />
                                <div>
                                    <span t-field="doc.turnover_delta_sign" />
                                    <span t-field="doc.turnover_delta" />
                                </div>
                            </td>
                        </tr>
                    </table>

                    <t t-foreach="doc.sale_ids" t-as="sale">

                        <table style="width:100%; font-size:0.8em; border:2px solid black; margin-top:0.8em;">
                            <tr>
                                <td style="padding:0.5em; width:15%;">
                                    <div t-if="sale.name">Sale</div>
                                    <div t-if="sale.state">State</div>
                                    <div t-if="sale.agency_id">Agency</div>
                                    <div t-if="sale.partner_id">Customer</div>
                                    <div t-if="sale.note">Comments</div>
                                </td>
                                <td style="padding:0.5em; width:18.333333%; border-right:0.5px solid grey; font-weight:bold;">
                                    <div t-if="sale.name" t-field="sale.name" />
                                    <div t-if="sale.state" t-field="sale.state" />
                                    <div t-if="sale.agency_id" t-field="sale.agency_id" />
                                    <div t-if="sale.partner_id" t-field="sale.partner_id" />
                                    <div t-if="sale.note" t-field="sale.note" />
                                </td>
                                <td style="padding:0.5em; width:15%;">
                                    <div t-if="sale.user_id">Salesperson</div>
                                    <div t-if="sale.confirmation_date">Confirmation Date</div>
                                    <div t-if="sale.client_order_ref">Customer Reference</div>
                                    <div t-if="sale.reference">Internal Reference</div>

                                </td>
                                <td style="padding:0.5em; width:18.333333%; border-right:0.5px solid grey; font-weight:bold;">
                                    <div t-if="sale.user_id" t-field="sale.user_id" />
                                    <div t-if="sale.confirmation_date" t-field="sale.confirmation_date" />
                                    <div t-if="sale.client_order_ref" t-field="sale.client_order_ref" />
                                    <div t-if="sale.reference" t-field="sale.reference" />
                                    
                                </td>
                                <td style="padding:0.5em; width:15%;">
                                    <div>Total</div>
                                    <div>Invoiced</div>
                                    <div>To Invoice</div>
                                    <div>Invoiced Proportion</div>
                                </td>
                                <td style="padding:0.5em; width:18.333333%; font-weight:bold;">
                                    <t t-set="total" t-value="sum((l.price_subtotal) for l in sale.order_line)"/>
                                    <div t-esc="total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                    
                                    <t t-set="total_invoiced" t-value="sum((l.price_subtotal * l.qty_invoiced / l.product_uom_qty) for l in sale.order_line)"/>
                                    <div t-esc="total_invoiced" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <t t-set="total_to_invoice" t-value="sum((l.price_subtotal * l.qty_to_invoice / l.product_uom_qty) for l in sale.order_line)"/>
                                    <div t-esc="total_to_invoice" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <div>
                                        <span t-esc="round(total_invoiced / total * 100 if total != 0 else 0, 2)" />%
                                    </div>
                                </td>
                            </tr>

                            <t t-foreach="sale.order_line" t-as="line"><t t-if="line.production_id.id == doc.id">

                            <tr>
                                <td style="padding:0.5em; width:15%;">
                                    <div>Unit Price</div>
                                    <div>Quantity</div>
                                    <div>Discount</div>
                                    <div>Commission</div>
                                    <div style="padding-top:0.5em;">Total</div>
                                    <div>Invoiced</div>
                                    <div>To Invoice</div>
                                </td>
                                <td style="padding:0.5em; width:18.333333%; font-weight:bold;">
                                    <div t-field="line.price_unit" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <div t-field="line.product_uom_qty" style="float:left; clear:both;" />
                                    <div t-esc="line.price_unit * line.product_uom_qty" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                    
                                    <div style="float:left; clear:both;">
                                        <span t-esc="round(line.discount_base, 2)" />%
                                    </div>
                                    <div t-esc="line.price_unit * line.product_uom_qty * (1-line.discount_base)" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <div style="float:left; clear:both;">
                                        <span t-esc="round(line.commission, 2)" />%
                                    </div>
                                    <div t-esc="line.price_subtotal" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <div t-field="line.price_subtotal" style="padding-top:0.5em; float:right; clear:both;" />

                                    <div t-esc="line.price_subtotal * line.qty_invoiced / line.product_uom_qty if line.product_uom_qty != 0 else 0" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />

                                    <div t-esc="line.price_subtotal * line.qty_to_invoice / line.product_uom_qty if line.product_uom_qty != 0 else 0" style="float:right;" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                </td>
                            </tr>

                            </t></t>

                        </table>


                        <h3>
                            <span t-field="sale.name" />
                        </h3>
                        <div style="font-style: italic;">
                            <span t-field="sale.state" />
                        </div>
                        <h4>
                            <t t-if="sale.agency_id">
                                <div>Agency : <span t-field="sale.agency_id" /></div>
                            </t>
                            <div>Customer : <span t-field="sale.partner_id" /></div>
                        </h4>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Invoices</th>
                                    <th colspan="2" style="width:33.33333333%;">Pricing</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-foreach="sale.order_line" t-as="l">
                                    <t t-if="l.production_id.id == doc.id">

                                        <t t-set="amount_invoiced" t-value="l.price_subtotal * l.qty_invoiced / l.product_uom_qty"/>
                                        <t t-set="amount_to_invoice" t-value="l.price_subtotal * l.qty_to_invoice / l.product_uom_qty"/>

                                        <tr>
                                            <td>
                                                <div><span t-field="l.product_id"/></div>
                                                <div><strong>Unit Price : </strong><span t-field="l.price_unit" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/></div>
                                                <div><strong>Quantity : </strong><span  t-field="l.product_uom_qty"/></div>
                                                <t t-if="l.discount_base > 0">
                                                    <div><strong>Discount : </strong><span  t-field="l.discount_base"/></div>
                                                </t>
                                                <t t-if="l.commission > 0">
                                                    <div><strong>Commission : </strong><span  t-field="l.commission"/></div>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-set="invoices" t-value="[]"/>
                                                <t t-foreach="l.invoice_lines" t-as="invoice_line">
                                                    <t t-if="not invoice_line.invoice_id.id in invoices">
                                                        <t t-set="invoices" t-value="invoices + [invoice_line.invoice_id.id]"/>

                                                        <div>
                                                            #<span t-esc="len(invoices)" />

                                                            <t t-if="invoice_line.invoice_id.number">
                                                                
                                                                <t t-set="invoice_date" t-value="invoice_line.invoice_id.date_invoice.split('-')"/>

                                                                <strong t-esc="invoice_line.invoice_id.number" />
                                                                (<span t-esc="invoice_date[2] + '/' + invoice_date[1] + '/' + invoice_date[0]" />)
                                                            </t>
                                                            <t t-if="not invoice_line.invoice_id.number">
                                                                <em>Draft Invoice</em>
                                                            </t>

                                                        </div>

                                                    </t>
                                                </t>
                                            </td>
                                            <td>
                                                <div><strong>Amount Invoiced</strong></div>
                                                <div><strong>Amount To Invoice</strong></div>
                                                <div><strong>Subtotal</strong></div>
                                            </td>
                                            <td class="text-right">
                                                <div t-esc="amount_invoiced" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                <div t-esc="amount_to_invoice" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                <div t-field="l.price_subtotal"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>

                            </tbody>
                        </table>
                    </t>

                    <div class="row" name="total">
                        <div class="col-xs-4 pull-right" style="padding-left:0;">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Invoiced Without Taxes</strong></td>
                                    <t t-set="total" t-value="sum((l.price_subtotal * l.qty_invoiced / l.product_uom_qty) for l in doc.sale_line_ids)"/>
                                    <td class="text-right">
                                        <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total To Invoice Without Taxes</strong></td>
                                    <t t-set="total" t-value="sum((l.price_subtotal * l.qty_to_invoice / l.product_uom_qty) for l in doc.sale_line_ids)"/>
                                    <td class="text-right">
                                        <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <t t-set="total" t-value="sum(l.price_subtotal for l in doc.sale_line_ids)"/>
                                    <td class="text-right">
                                        <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </template>


        <template id="report_production_invoice_status_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="publisher.report_production_invoice_status_template_document" t-lang="user.partner_id.lang"/>
                </t>
            </t>
        </template>




        <template id="report_production_global_template">
            <t t-call="report.html_container">
                <t t-call="publisher.publisher_layout_internal">
                    <div class="page">
                        <div class="oe_structure" />

                        <h2 style="font-size:2em; text-align:center; padding-top:3.5em; padding-bottom:1em;">
                            Productions global state to be closed from <span t-esc="date_from" /> to <span t-esc="date_to" />
                        </h2>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Production</th>
                                    <th>Name</th>
                                    <th class="text-right">Expected</th>
                                    <th class="text-right">Actual</th>
                                    <th class="text-right">Ratio</th>
                                    <th class="text-right">Difference</th>
                                    <th>Closing</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="total_expected" t-value="0"/>
                                <t t-set="total_actual" t-value="0"/>
                                <t t-set="total_delta" t-value="0"/>

                                <t t-foreach="data" t-as="prod_type_id">

                                    <t t-set="prod_type" t-value="data[prod_type_id]['obj']"/>
                                    <t t-set="prods" t-value="data[prod_type_id]['prods']"/>
                                    
                                    <t t-set="prod_type_expected" t-value="sum(prod.expected_turnover for prod in prods)"/>
                                    <t t-set="prod_type_actual" t-value="sum(prod.actual_turnover for prod in prods)"/>
                                    <t t-set="prod_type_delta" t-value="prod_type_actual - prod_type_expected"/>

                                    <t t-set="total_expected" t-value="total_expected + prod_type_expected"/>
                                    <t t-set="total_actual" t-value="total_actual + prod_type_actual"/>
                                    <t t-set="total_delta" t-value="total_delta + prod_type_delta"/>

                                    <tr class="border-black" style="font-weight:bold;">
                                        <td colspan="2" style="font-size:1.2em;"><span t-esc="prod_type.name"/></td>
                                        <td class="text-right"><span t-esc="prod_type_expected"/></td>
                                        <td class="text-right"><span t-esc="prod_type_actual"/></td>
                                        <td class="text-right"><span t-esc="round(prod_type_actual / prod_type_expected * 100 if prod_type_expected > 0 else 0, 2)"/>%</td>
                                        <td class="text-right"><span t-esc="'+' if prod_type_delta > 0 else ''"/><span t-esc="prod_type_delta"/></td>
                                        <td> </td>
                                    </tr>

                                    <t t-foreach="prods" t-as="prod">
                                        <tr>
                                            <td><span t-esc="prod.seq_number"/></td>
                                            <td><span t-esc="prod.name"/></td>
                                            <td class="text-right"><span t-esc="prod.expected_turnover"/></td>
                                            <td class="text-right"><span t-esc="prod.actual_turnover"/></td>
                                            <td class="text-right"><span t-esc="round(prod.actual_turnover / prod.expected_turnover * 100 if prod.expected_turnover > 0 else 0, 2)"/>%</td>
                                            <td class="text-right"><span t-esc="prod.turnover_delta_sign"/><span t-esc="prod.turnover_delta"/></td>
                                            <td><span t-esc="prod.date_closing"/></td>
                                        </tr>
                                    </t>
                                </t>

                                <tr class="border-black" style="font-weight:bold;">
                                    <td colspan="2" style="font-size:1.4em;">Total</td>
                                    <td class="text-right"><span t-esc="total_expected"/></td>
                                    <td class="text-right"><span t-esc="total_actual"/></td>
                                    <td class="text-right"><span t-esc="round(total_actual / total_expected * 100 if total_expected > 0 else 0, 2)"/>%</td>
                                    <td class="text-right"><span t-esc="'+' if total_delta > 0 else ''"/><span t-esc="total_delta"/></td>
                                    <td> </td>
                                </tr>

                            </tbody>
                        </table>

                        <!-- <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td><strong>Total Invoiced Without Taxes</strong></td>
                                        <t t-set="total" t-value="sum((line.price_unit * line.qty_invoiced) for line in doc.sale_line_ids)"/>
                                        <td class="text-right">
                                            <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td><strong>Total To Invoice Without Taxes</strong></td>
                                        <t t-set="total" t-value="sum((line.price_unit * line.qty_to_invoice) for line in doc.sale_line_ids)"/>
                                        <td class="text-right">
                                            <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td><strong>Total Without Taxes</strong></td>
                                        <t t-set="total" t-value="sum(line.price_subtotal for line in doc.sale_line_ids)"/>
                                        <td class="text-right">
                                            <span t-esc="total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div> -->

                        <div class="oe_structure"/>
                    </div>
                </t>
